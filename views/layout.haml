%html
  %head
    %meta{:"http-equiv"=>"Content-Type", :content=>"text/html;charset=UTF-8"}
    %title= options.title
    %link{:rel=>'stylesheet', :type=>'text/css', :href=>'/css', :media=>'screen,tv,projection'}
  %body
    #wrap
      #header
        %h1
          %a{:href => '/'}= options.title

      #content{:style => 'float: left; width: 70%'}
        = yield

      #navigation{:style => 'float: right; width: 26%'}
        = navigation

      %div{:style => 'clear: both;'}

      #footer
        Powerd by
        %a{:href=>'http://github.com/jugyo/gitki'} Gitki
